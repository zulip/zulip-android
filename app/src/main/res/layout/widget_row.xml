<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="14dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Social"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/indigo_material_500"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/widget_sendername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Sender name"
        android:layout_below="@+id/widget_header"
        android:textColor="@android:color/black"
        android:paddingTop="3dp" />

    <TextView
        android:id="@+id/widget_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/widget_sendername"
        android:text="Message Here"
        android:textColor="@android:color/black"
        android:paddingTop="3dp"
        android:paddingBottom="3dp" />

    <TextView
        android:id="@+id/widget_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/widget_sendername"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="1:02 PM"
        android:textColor="@android:color/black"
        android:paddingBottom="3dp"
        android:paddingTop="3dp" />
</RelativeLayout>