<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/stream_actv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:dropDownWidth="fill_parent"
            android:hint="@string/stream_txt"
            android:visibility="visible" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/topic_actv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.22"
            android:dropDownWidth="fill_parent"
            android:hint="@string/subject"
            android:maxLines="1" />

        <ImageView
            android:id="@+id/togglePrivateStream_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/ic_action_person" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/message_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/tap_message"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/ic_send_24dp"
            android:tint="#757575" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/composeStatus"
        android:layout_width="match_parent"
        android:layout_height="24dp"

        android:layout_gravity="center"
        android:background="#eeeeee"
        android:gravity="center|center_vertical"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/sending_message"
            android:textSize="16sp" />
    </LinearLayout>


</merge>
